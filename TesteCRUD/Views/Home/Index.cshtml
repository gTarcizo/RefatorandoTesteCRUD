@model List<Regra.Models.PessoaModel>

@{
   ViewData["Title"] = "Lista de Pessoas";
}


<div class="text-center">
   <h1 class="display-5 m-3">Listagem</h1>
   <hr />
</div>

<small class="text-muted m-3 d-flex justify-content-center">~Clique sobre os valores da tabela para ir para tela de edição~</small>

<table class="table table-hover">
   <thead class="thead-dark">
      <tr>
         <th scope="col">Nome</th>
         <th scope="col">CPF</th>
         <th scope="col">Telefone</th>
         <th scope="col">Email</th>
         <th scope="col" class="text-center">Qtd. Endereço</th>
         <th scope="col" class="text-center">Qtd. Divida</th>
         <th scope="col">Apagar</th>
      </tr>
   </thead>
   <tbody>
      @foreach (var item in Model)
      {
         <tr>
            @Html.HiddenFor(modelItem => item.IdPessoa, new { idPessoa = "idPessoa"})
            <td><a asp-controller="Pessoa" asp-action="Editar" class="text-dark font-weight-light text-decoration-none" asp-route-idPessoa="@item.IdPessoa"> @Html.DisplayFor(modelItem => item.Nome) </a></td>
            <td> <a asp-controller="Pessoa" asp-action="Editar" class="text-dark font-weight-light text-decoration-none" asp-route-idPessoa="@item.IdPessoa"> @Html.DisplayFor(modelItem => item.CPF)</a></td>
            <td> <a asp-controller="Pessoa" asp-action="Editar" class="text-dark font-weight-light text-decoration-none" asp-route-idPessoa="@item.IdPessoa"> @Html.DisplayFor(modelItem => item.Telefone)</a></td>
            <td> <a asp-controller="Pessoa" asp-action="Editar" class="text-dark font-weight-light text-decoration-none" asp-route-idPessoa="@item.IdPessoa"> @Html.DisplayFor(modelItem => item.Email)</a></td>
            <td class="text-center"> <a asp-controller="Pessoa" asp-action="Editar" class="text-dark font-weight-light text-decoration-none" asp-route-idPessoa="@item.IdPessoa"> @Html.DisplayFor(modelItem => item.QuantidadeEndereco)</a></td>
            <td class="text-center"> <a asp-controller="Pessoa" asp-action="Editar" class="text-dark font-weight-light text-decoration-none" asp-route-idPessoa="@item.IdPessoa"> @Html.DisplayFor(modelItem => item.QuantidadeDivida)</a></td>
            <td><form asp-controller="Pessoa" asp-action="Apagar" class="text-dark font-weight-light text-decoration-none" asp-route-idPessoa="@item.IdPessoa"><button type="submit" class="border-0 btn btn-outline-danger">X</button></form></td>
         </tr>
      }
   </tbody>
</table>

@section scripts {
   <script src="js/home/home.js"></script>
}